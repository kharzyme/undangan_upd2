{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "vercel-php@0.7.2",
      "config": {
        "includeFiles": [
          "app/**",
          "bootstrap/**",
          "config/**",
          "database/**",
          "resources/**",
          "routes/**",
          "vendor/**",
          "storage/**",
          "public/build/**",
          "public/build/.vite/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/build/(.*)", "dest": "public/build/$1" },
    { "src": "/codes/(.*)", "dest": "public/codes/$1" },
    { "src": "/images/(.*)", "dest": "public/images/$1" },
    { "src": "/fontawesome/(.*)", "dest": "public/fontawesome/$1" },
    { "src": "/(.*)", "dest": "public/index.php" }
  ]
}